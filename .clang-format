BasedOnStyle: WebKit

ColumnLimit: 80

PointerAlignment: Right
AlignEscapedNewlines: DontAlign

IncludeCategories:
  - Regex:           '^<basic\.h>$'
    Priority:        -100
  - Regex:           '^<assert\.h>$'
    Priority:        -95
  - Regex:           '^<ng/.*\.h>$'
    Priority:        -90
  - Regex:           '^<st[dr].*\.h>$'
    Priority:        -80
  - Regex:           '^<sys/.*\.h>$'
    Priority:        -70
  - Regex:           '^<[^/]*\.h>$'
    Priority:        -60
  - Regex:           '^<.*\.h>$'
    Priority:        -50

ForEachMacros:
  - list_for_each
